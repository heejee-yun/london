<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.augfw.infra.modules.member.MemberMapper">

    <resultMap id="resultMapObj" type="com.augfw.infra.modules.member.Member"></resultMap>
	
	<select id="selectList" resultMap="resultMapObj">
		SELECT
			*
		FROM member 
		WHERE 1=1

			<if test="shDelNy !=null and !shDelNy.equals('')">AND resignNy = #{shDelNy}</if>
			<if test="shValue !=null"></if>
			
			<choose>
				<when test="shOption == 1">AND seq = #{shValue}</when> <!-- 숫자: = #{shValue} -->
				<when test="shOption == 2">AND oderny = #{shValue}</when> <!-- 문자열: LIKE CONTACT('%', #{shValue},'%') -->
				<when test="shOption == 3">AND name LIKE CONCAT('%', #{shValue},'%')</when>

				<otherwise></otherwise>
			</choose>
	</select>
	<insert id="insert">
		INSERT INTO cc(
			seq
			,id
			,name
			,mobile
			,email
			,dob
		)
		VALUES(
			seq
			,#{name}
			,#{mobile}
			,#{email}
			,#{dob}
		)
		
		<selectKey resultType="String" keyProperty="seq" order="AFTER">
			SELECT last_insert_id()
		</selectKey>
	</insert>

</mapper>	